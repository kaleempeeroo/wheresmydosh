<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.helpathand.helpathand" >
    <!-- Android Anth0 Lock permissions to allow calls to Auth0 API -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name=".LoginActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.Dark">

        </activity>
        <activity
                android:name=".MainActivity"
                android:theme="@style/AppTheme.Dark" />
        <activity
                android:name=".SignupActivity"
                android:theme="@style/AppTheme.Dark" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Lock Activity declaration for login/signup -->
        <activity
                android:name="com.auth0.android.lock.LockActivity"
                android:label="@string/app_name"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
                android:theme="@style/MyLock.Theme">
            <!--
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:host="@string/com_auth0_domain" android:pathPrefix="/android/com.helpathand.helpathand/callback" android:scheme="com.helpathand.helpathand" />
            </intent-filter>
            -->
        </activity>
    </application>

</manifest>